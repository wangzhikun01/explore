/* pages/profile/profile.wxss */
/* 导入字体样式 */
@import "../../style/iconfont.wxss";
/* 头部，头像、姓名、职位 */
.head{
  display: flex;
  justify-content: space-between;
  font-size:30px;
  font-weight: 600;
}
.head .wt{
  font-size:18px;
  margin-top:10rpx;
}
.head>view:last-child{
  width: 500rpx;
  text-align: center;
  margin-top:42rpx;
}
.head>view:first-child{
  border-radius:50%;
  overflow: hidden;
  width:200rpx;
  height:200rpx;
  margin-left: 50rpx;
}
/* 信息预览，离职，学历，自我评价 */
.part{
  margin:25rpx 25rpx 0;
  border-top:1px solid rgb(160, 156, 156);
  padding:20rpx 10rpx 0;
}
.info>view{
  margin-bottom: 15rpx;
}
.info .items{
  display: flex;
}
.info .items .item{
  width: 230rpx;
}
.iconfont{
  margin-right: 10rpx;
}
/* 技能说明 */
.skill{
  text-align: center;
}
.skill>view:nth-child(2n){
  background: rgb(231, 227, 227);
}
/* 公司 */
.work{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color:rgb(213, 245, 209);
  border-radius: 5px;
  margin-bottom: 10rpx;
  border-bottom: 1px rgb(160, 156, 156) solid;
}
.work>view{
  margin-bottom:10rpx;
}
.w-name{
  font-size:18px;
  width: 300rpx;
  font-weight: 600;
}
.w-time{
  width: 300rpx;
  font-size:14px;
}

