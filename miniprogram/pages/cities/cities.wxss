/* pages/cities/cities.wxss */

page {
  background: rgb(4, 108, 204);
  /* filter: blur(40rpx); *//* padding:20rpx; */
  font-size: 20px;
}

input {
  border-bottom: 1px rgb(117, 117, 117) solid;
  color: white;
  width: 80%;
  padding: 20rpx 10% 10rpx 10%;
}

.item {
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
  background: rgb(154, 197, 238);
  box-shadow: 0 0 1px 0 rgb(14, 13, 13);
  /* background-image: linear-gradient(0deg,rgba(41, 40, 40, 0.671) 0%,rgb(4, 108, 204) 50%,rgba(41, 40, 40, 0.671) 100%); */
  border-radius: 3px;
  width: 96%;
  margin: 20rpx 2%;
  padding-left: 8%;
  color: black;
  font-size: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item:active{
  width: 100%;
  margin: 20rpx 0;
  background:white;
}
